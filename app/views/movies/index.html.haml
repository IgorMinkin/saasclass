%h2 All Movies

%table#movies
	%thead
		%tr
			%th{ :class => flash[:sort_col] == 'title' ? flash[:selected_col_style] : nil, :id => 'title_header' }
				= link_to 'Movie Title', movies_path(:sort_col => 'title', :sort_dir => flash[:sort_dir])
			%th Rating
			%th{ :class => flash[:sort_col] == 'release_date' ? flash[:selected_col_style] : nil, :id => 'release_date_header' }
				= link_to 'Release Date', movies_path(:sort_col => 'release_date', :sort_dir => flash[:sort_dir])
			%th More Info
	%tbody
		- @movies.each do |movie|
			%tr
				%td= movie.title
				%td= movie.rating
				%td= movie.release_date
				%td= link_to "More about #{movie.title}", movie_path(movie)
				
= link_to 'Add new movie', new_movie_path